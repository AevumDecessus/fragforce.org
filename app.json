{
  "name": "fragforce.org",
  "description": "Fragforce Dev PR",
  "website": "https://www.fragforce.org",
  "repository": "https://github.com/fragforce/fragforce.org",
  "env": {
    "HC_RO_SCHEMA": "org",
    "SINGAPORE_DONATIONS": "5000",
    "OTHER_DONATIONS": "1000",
    "TARGET_DONATIONS": "250000",
    "GOOGLE_ANALYTICS_ID": {
      "required": true
    },
    "REDIS_DJ_POOL_MAX_CONN": {
      "required": true
    },
    "TILTIFY_TOKEN": {
      "required": true
    },
    "REDIS_DJ_TIMEOUT": {
      "required": true
    },
    "DEBUG": {
      "required": true
    },
    "EXTRALIFE_TEAMID": {
      "required": true
    },
    "HC_RO_URL": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true,
      "description": "A secret key used by Django for various tasks",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-2x"
    },
    "worker": {
      "quantity": 2,
      "size": "standard-2x"
    },
    "beat": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:standard-0",
      "as": "DATABASE",
      "options": {
      }
    },
    {
      "plan": "heroku-redis:premium-0",
      "as": "REDIS0",
      "options": {
        "maxmemory-policy": "allkeys-lru"
      }
    },
    {
      "plan": "heroku-redis:premium-0",
      "as": "REDIS1",
      "options": {
        "maxmemory-policy": "allkeys-lru"
      }
    },
    {
      "plan": "heroku-redis:premium-0",
      "as": "REDIS2",
      "options": {
        "maxmemory-policy": "allkeys-lru"
      }
    },
    {
      "plan": "heroku-redis:premium-0",
      "as": "REDIS3",
      "options": {
        "maxmemory-policy": "allkeys-lru"
      }
    },
    {
      "plan": "heroku-redis:premium-0",
      "as": "REDIS4",
      "options": {
        "maxmemory-policy": "allkeys-lru"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "python manage.py test"
      }
    }
  },
  "scripts": {
    "postdeploy": "python manage.py migrate"
  },
  "success_url": "/"
}
