{
  "name": "fragforce.org",
  "description": "Fragforce Dev PR",
  "scripts": {
    "postdeploy": "pg_dump --schema=$HC_SCHEMA $HC_RO_URL | psql $DATABASE_URL && bundle exec rake db:migrate"
  },
  "env": {
    "HC_RO_SCHEMA": "org",
    "GOOGLE_ANALYTICS_ID": {
      "required": true
    },
    "EXTRALIFE_TEAMID": {
      "required": true
    },
    "REDIS_DJ_POOL_MAX_CONN": {
      "required": true
    },
    "TILTIFY_TOKEN": {
      "required": true
    },
    "REDIS_DJ_TIMEOUT": {
      "required": true
    },
    "DEBUG": {
      "required": true
    },
    "EXTRALIFE_TEAMID": {
      "required": true
    },
    "HC_RO_URL": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true,
      "description": "A secret key used by Django for various tasks",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:standard-0",
      "as": "DATABASE",
      "options": {
      }
    },
    {
      "plan": "heroku-redis:premium-0",
      "as": "REDIS",
      "options": {
        "maxmemory-policy": "allkeys-lru"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "python manage.py test"
      }
    }
  }
}
